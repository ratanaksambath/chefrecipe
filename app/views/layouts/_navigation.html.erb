<header class = "navbar navbar-fixed-top navbar-default">
  <div class = "container">
    <%= link_to "superChef",root_path, class: "btn btn-lg btn-link", id: "logo" %>


    <% if logged_in? %>
      <div class = "nav-item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <ul class = "nav-item" style= "float: right">
        <li class = "dropdown">
          <%= link_to '#',class: "btn btn-link dropdown-toggle",id: "nav-item-setting", "data-toggle" => "dropdown" do %>
          <%= current_user.chefname %> <b class = "caret"></b>
          <% end %>
          <ul class = "dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class = "divider"></li>
            <li><%= link_to "Logout", logout_path%></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class = "nav-item" style = "float: right">
        <%= link_to "Log in", login_path, class: "btn btn-link", id: "nav-item-setting"  %>
      </div>
    <% end %>
  </div>
</header>